{
    "name": "shop-to-it",
    "version": "1.0.0",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "startdev": "tsc-watch --onSuccess \"node server/dist/index.js\"",
        "start": "node server/dist/index",
        "server": "nodemon server/index.ts",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run startdev\" \"npm run client\"",
        "data:import": "ts-node server/seeder",
        "data:destroy": "ts-node server/seeder -d",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/heuzin/shop-to-it.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/heuzin/shop-to-it/issues"
    },
    "homepage": "https://github.com/heuzin/shop-to-it#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "dotenv": "^14.3.0",
        "express": "^4.17.2",
        "express-async-handler": "^1.2.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.1.8",
        "morgan": "^1.10.0",
        "multer": "^1.4.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/react-helmet": "^6.1.5",
        "concurrently": "^7.0.0",
        "nodemon": "^2.0.15",
        "ts-node": "^10.7.0",
        "tsc-watch": "^4.6.0",
        "typescript": "^4.6.2"
    }
}
